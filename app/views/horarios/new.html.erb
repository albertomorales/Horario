<h1>New horario</h1>

<% form_for(@horario) do |f| %>
  <%= f.error_messages %>
<p>
    <%= f.label :curso_id %><br />
    <%= f.select :curso_id, nombre_curso  %>
  </p>

  <p>
    <%= f.label :dia %><br />
    <%= f.select :dia, dias_semana %>
  </p>
  <p>
    <%= f.label :hora %><br />
    <%= f.select :hora, d_horas %>
  </p>
  <p>
    <%= f.label :hora_f %><br />
    <%= f.select :hora_f, d_horas %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', horarios_path %>
