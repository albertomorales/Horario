<h1>Datos Alumno</h1>

<% form_for(@alumno) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.submit 'Escoger Curso' %>
  </p>
<% end %>

<%= link_to 'Back', alumnos_path %>
