<h1>Lista de cursos</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>

  </tr>

<% @cursos.each do |curso| %>
  <tr>
    <td><%=h curso.nombre %></td>
    <td><%=h curso.descripcion %></td>
    <td><%= link_to 'Show', curso %></td>
    <td><%= link_to 'Edit', edit_curso_path(curso) %></td>
    <td><%= link_to 'Destroy', curso, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Horario', :controller => 'matriculas', :action => 'cuadro_horario' , :cur_id => curso.id%></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New curso', new_curso_path %>
